<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="sprint1">
	<test thread-count="5" name="homepage">
		<groups>
			<run>
				<include name="sprint1"></include>
				<include name="sprint2"></include>
				<include name="smoke"></include> <!-- this will include all test cases tagged smoke -->
				<exclude name="regression"></exclude> <!-- this method excludes the groups mentioned here -->
			</run>
		</groups><!-- if we want to add a test case from another package we have to add the class name as well -->
		<classes>
			<class name="seleniumTestNG.Selenium_Day1_Example" />
			<class name="seleniumTestNG1.TestNG_Day03" />
		</classes>
	</test> <!-- homepage -->
</suite> <!-- sprint1 -->
